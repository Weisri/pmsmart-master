<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/toolbar_bg</item>
        <item name="colorPrimaryDark">@color/toolbar_bg</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="toolbarStyle" tools:ignore="NewApi">@style/MyToolBar</item>
    </style>
    <style name="MyToolBar" parent="Widget.AppCompat.Toolbar">
        <!--去除左边边距-->
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="splashTheme" parent="AppTheme">
        <!--<item name="android:background" >@drawable/splash</item>-->
        <item name="android:windowFullscreen">true</item>

    </style>
<!--ExpandableListView的item 文字样式-->
    <style name="ExpandListItem">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <!--自定义seekbarstyle-->
    <style name="CustomSeekbarStyle" >
        <item name="android:maxHeight">8dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@color/seek_bar_green</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress_drawable</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:thumb">@drawable/seek_thumb_normal</item>
    </style>
    <!--EditText下划线 光标颜色-->
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/edittext_color</item>
        <item name="colorControlActivated">@color/edittext_color</item>
    </style>

    <!--分割线样式-->
    <style name="LineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/line</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>


    <style name="MyDialogStyle">
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>



    <color name="edittext_color">#b3b3b3</color>
    <color name="f000000">#000000</color>
    <color name="transparent">#B3000000</color>
</resources>
