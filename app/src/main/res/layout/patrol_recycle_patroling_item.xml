<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_24"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_20">
    <TextView
        android:id="@+id/tv_stationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/patrol_item_black"
        android:textSize="@dimen/sp_13"
        android:text="弓村站牌检测正常"/>

    <TextView
        android:id="@+id/tv_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_stationName"
        android:textColor="@color/patrol_item_gray"
        android:textSize="@dimen/sp_13"
        android:text="完成"/>

    <ImageView
        android:id="@+id/iv_right"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/dp_27"
        android:src="@mipmap/patrol_item_ok"/>
    </RelativeLayout>
</RelativeLayout>